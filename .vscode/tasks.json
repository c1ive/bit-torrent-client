{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build: bit-torrent-client",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Configure CMake",
        },
        {
            "label": "Build and Run: bit-torrent-client",
            "type": "shell",
            "command": "${workspaceFolder}/build/bit-torrent-client ./build/debian-13.2.0-arm64-netinst.iso.torrent",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-bencode-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/bt-bencode-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-metadata-loader-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/bt-metadata-loader-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-connection-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/bt-connection-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: run all",
            "type": "shell",
            "command": "${workspaceFolder}/build/bt-metadata-loader-tests && ${workspaceFolder}/build/bt-bencode-tests && ${workspaceFolder}/build/bt-connection-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        }
    ]
}