{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: bit-torrent-client",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build and Run: bit-torrent-client",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/bit-torrent-client --torrent ./tests/debian-13.2.0-amd64-netinst.iso.torrent -v",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-bencode-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/bt-bencode-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-metadata-loader-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/bt-metadata-loader-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-connection-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/bt-connection-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: bt-peer-communication-tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/bt-peer-communication-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        },
        {
            "label": "Test: run all",
            "type": "shell",
            "command": "${workspaceFolder}/build/debug/bt-metadata-loader-tests && ${workspaceFolder}/build/debug/bt-bencode-tests && ${workspaceFolder}/build/debug/bt-connection-tests && ${workspaceFolder}/build/debug/bt-peer-communication-tests",
            "group": "test",
            "dependsOn": [
                "Build: bit-torrent-client"
            ]
        }
    ]
}